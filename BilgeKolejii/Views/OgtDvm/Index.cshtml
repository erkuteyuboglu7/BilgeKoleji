@using BilgeKolejii.Models
@using PagedList
@using PagedList.Mvc

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Bilge Koleji - Devamsızlık</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
    <link href="/assets/css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="/assets/css/demo.css" rel="stylesheet" />


    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />

    <!--   Core JS Files   -->
    <script src="/assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>

    <!--  Charts Plugin -->
    <script src="/assets/js/chartist.min.js"></script>

    <!--  Notifications Plugin    -->
    <script src="/assets/js/bootstrap-notify.js"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="/assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>

    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="/assets/js/demo.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            demo.initChartist();



        });
    </script>

</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="/assets/img/sidebar-5.jpg">

            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text">
                        Bilge Koleji
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index","OgtSnv")">
                            <i class="pe-7s-graph"></i>
                            <p>Sınavlar</p>
                        </a>
                    </li>
                    <li>
                    <li class="active">
                        <a href="@Url.Action("Index","OgtDvm")">
                            <i class="pe-7s-user"></i>
                            <p>Devamsızlık</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","OgtDers")">
                            <i class="pe-7s-note2"></i>
                            <p>Dersler</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","OgtMsj")">
                            <i class="pe-7s-news-paper"></i>
                            <p>Mesaj</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","OgtEtk")">
                            <i class="pe-7s-science"></i>
                            <p>Yaklaşan Etkinlikler</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","OgtDuyuru")">
                            <i class="fa-globe"></i>
                            <p>Duyurular</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Devamsızlık</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                 
                            <li class="dropdown">
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Home")">
                                    <p>Çıkış</p>
                                </a>
                            </li>
                            <li class="separator hidden-lg"></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <table class="table table-bordered">
                <tr>
                    <th style="text-align:center">YOKLAMA ID</th>
                    <th style="text-align:center">DERS PLANI ID</th>
                    <th style="text-align:center">ÖĞRENCİ ADI SOYADI</th>
                    <th style="text-align:center">KATILIM</th>
                    <th style="text-align:center">SİL</th>
                    <th style="text-align:center">GÜNCELLE</th>
                </tr>
                <tbody>
                    @foreach (var yk in Model)
                    {
                        <tr>
                            <th style="text-align:center">@yk.Id</th>
                            <td style="text-align:center">@yk.DersPlanId</td>
                            <td style="text-align:center">@yk.Ogrenciler.Ad @yk.Ogrenciler.Soyad</td>
                            <td style="text-align:center">@yk.Katilim</td>
                            <td style="text-align:center"><a href="/OgtDvm/SIL/@yk.Id" class="btn btn-danger">SİL</a></td>
                            <td style="text-align:center"><a href="/OgtDvm/YoklamaGetir/@yk.Id" class="btn btn-success">GÜNCELLE</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/OgtDvm/YeniYoklama/" class="btn btn-primary" style="margin-left:10px; margin-bottom:280px">YENİ YOKLAMA GİR</a>

            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","OgtSnv")">
                                    Sınavlar
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","OgtDvm")">
                                    Devamsızlık
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","OgtDers")">
                                    Dersler
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","OgtMsj")">
                                    Mesaj
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","OgtEtk")">
                                    Yaklaşan Etkinlikler
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","OgtDuyuru")">
                                    Duyurular
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> <a href="http://www.creative-tim.com"></a>Bilge Koleji Tüm Hakları Saklıdır.
                    </p>
                </div>
            </footer>

        </div>
    </div>


</body>



</html>

